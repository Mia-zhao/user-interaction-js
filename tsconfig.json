{

  "include": ["src"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "useDefineForClassFields": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "Node",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  }
}
